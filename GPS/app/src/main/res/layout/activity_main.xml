<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lat"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="168dp"
        android:gravity="center"
        android:text="Latitude   --:--"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lon"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Longitude   --:--"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/lat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lat"
        app:layout_constraintTop_toBottomOf="@+id/lat" />

    <TextView
        android:id="@+id/address"
        android:layout_width="357dp"
        android:layout_height="75dp"
        android:layout_marginTop="48dp"
        android:gravity="center|center_horizontal"
        android:text="Address --:--"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/lon"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/lon"
        app:layout_constraintTop_toBottomOf="@+id/lon" />

    <TextView
        android:id="@+id/dist"
        android:layout_width="234dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0.0 m"
        android:textColor="#FF0000"
        android:textColorHighlight="#00FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/address"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <Button
        android:id="@+id/button"
        android:layout_width="301dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:text="RESET DISTANCE"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/dist"
        app:layout_constraintStart_toStartOf="@+id/dist"
        app:layout_constraintTop_toBottomOf="@+id/dist" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="118dp"
        android:layout_height="56dp"
        android:layout_marginStart="36dp"
        android:text="Dark Mode"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintStart_toStartOf="@+id/time" />

    <TextView
        android:id="@+id/time"
        android:layout_width="377dp"
        android:layout_height="52dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Favorite Place   --:--"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/lat"
        app:layout_constraintEnd_toEndOf="@+id/lat"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/lat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Yash Nishikant"
        android:textColor="#00FF0A"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/dist"
        app:layout_constraintStart_toStartOf="@+id/dist" />

</androidx.constraintlayout.widget.ConstraintLayout>


