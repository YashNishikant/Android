<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rotationX="0"
    android:rotationY="0"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/MidButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="onclickM"
        android:text="Button" />

    <Button
        android:id="@+id/TL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MidButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_toLeftOf="@+id/MidButton"
        android:onClick="onclickTL"
        android:text="Button" />

    <Button
        android:id="@+id/TR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MidButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/MidButton"
        android:onClick="onclickTR"
        android:text="Button" />

    <Button
        android:id="@+id/BL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MidButton"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/MidButton"
        android:onClick="onclickBL"
        android:text="Button" />

    <Button
        android:id="@+id/BR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MidButton"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/MidButton"
        android:onClick="onclickBR"
        android:text="Button" />

    <TextView
        android:id="@+id/txtTL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TL"
        android:layout_alignStart="@+id/TL"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="65dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TR"
        android:layout_alignEnd="@+id/TR"
        android:layout_marginLeft="285dp"
        android:layout_marginEnd="4dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/MidButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BL"
        android:layout_alignStart="@+id/BL"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="65dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtBR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BR"
        android:layout_alignEnd="@+id/BR"
        android:layout_marginLeft="285dp"
        android:layout_marginEnd="4dp"
        android:text="TextView" />
</RelativeLayout>